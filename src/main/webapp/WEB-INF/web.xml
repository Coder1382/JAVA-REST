<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>MyServlets</display-name>
  <servlet>
    <servlet-name>ServletFruit</servlet-name>
    <servlet-class>rest.servlets.RequestManagerFruit</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletFruit</servlet-name>
    <url-pattern>/fruit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletSellers</servlet-name>
    <servlet-class>rest.servlets.RequestManagerSellers</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletSellers</servlet-name>
    <url-pattern>/sellers</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletSuppliers</servlet-name>
    <servlet-class>rest.servlets.RequestManagerSuppliers</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletSuppliers</servlet-name>
    <url-pattern>/suppliers</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletCombo</servlet-name>
    <servlet-class>rest.servlets.RequestManagerCombo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCombo</servlet-name>
    <url-pattern>/seller_fruit</url-pattern>
  </servlet-mapping>
</web-app>
